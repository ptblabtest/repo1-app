{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@prisma/*": ["prisma/*"],
      "@generated/*": ["generated/*"],
      "@shared/*": ["../../../packages/shared-backend/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
